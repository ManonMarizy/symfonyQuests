{% extends 'base.html.twig' %}

{% block main %}
    <div class="m-3">
        <h1 class="text-center mb-4">Saison {{ season.number}} de {{ program.title }}</h1>
        <p class="h5">La saison {{ season.number }} de {{ program.title }} est constituée de {{ season.episodes|length }} épidoses et a été diffuée en {{ season.year }}.</p>
        <p class="h4">Description:</p>
        <p>{{ season.description }}</p>
        <p class="h4">Liste des épisodes</p>
        <ul class="list-unstyled">
            {% for episode in season.episodes %}
                <li class="ml-4"><a href="{{ path("program_episode_show", { programId: program.id, seasonId: season.id, episodeId: episode.id }) }}">Episode {{ episode.number }}: {{ episode.title }}</li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}