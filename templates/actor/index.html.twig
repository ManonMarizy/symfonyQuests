{%  extends 'base.html.twig' %}
{%  block main %}
    <div class="m-3">
        <h1 class="text-center mb-5">Tous les acteurs </h1>
        <div>
            {% for actor in actors %}
                <div class="mb-4">
                    <a href="{{ path("actor_show", { id: actor.id }) }}"><h2>{{ loop.index }} / {{ actor.name }}</h2></a>
                </div>
            {% else %}
                Aucun acteur trouvé.
            {% endfor %}
        </div>
        <div class="d-flex justify-content-end">
            <a class="btn btn-outline-primary mt-4" href="{{ path('app_index') }}">
                Retour à l'accueil
            </a>
        </div>
    </div>
{%  endblock %}