{%  extends 'base.html.twig' %}
{%  block main %}
    <h1>Toutes les categories : </h1>
    {% for category in categories %}
        <a href="{{ path('category_show', { categoryName: category.name }) }}">
            <h2>{{ category.name }}</h2>
        </a>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{%  endblock %}